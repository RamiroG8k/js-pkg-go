{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020"
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "__test__",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "build.ts"
  ]
}
